@model Eventures.Web.ViewModels.Accounts.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center">Login</h1>
<hr class="eventures-bg-color w-25 hr-2" />
<form asp-controller="Accounts" asp-action="Login" class="mx-auto w-25" method="post">
    <div class="form-group text-center">
        <label asp-for="Username" class="font-weight-bold">Username</label>
        <input asp-for="Username" class="form-control" placeholder="Username...">
    </div>
    <div class="form-group text-center">
        <label asp-for="Password" class="font-weight-bold">Password</label>
        <input asp-for="Password" class="form-control" placeholder="Password...">
    </div>
    <hr class="eventures-bg-color hr-2" />
    <div class="form-group text-center">
        <input asp-for="RememberMe" />
        <label asp-for="RememberMe"></label>
    </div>
    <hr class="eventures-bg-color hr-2" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color ">Login</button>
    </div>
</form>
<br/>
<div class="text-center">
    <a asp-controller="Accounts" asp-action="ChangePassword">Forgot your password?</a>
</div>
<div class="text-center">
    <a asp-controller="Accounts" asp-action="Register">Register as a new user</a>
</div>