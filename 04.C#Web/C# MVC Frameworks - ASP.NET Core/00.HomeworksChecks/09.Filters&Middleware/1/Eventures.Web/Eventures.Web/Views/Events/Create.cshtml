@model Eventures.Web.ViewModels.Events.EventCreateViewModel
@{
    ViewData["Title"] = "Create Event";
}
<h1 class="text-center">Create Event</h1>
<hr class="hr-2 eventures-bg-color w-50" />
<form class="mx-auto half-width" method="post" asp-controller="Events" asp-action="Create">
    <div class="form-row d-flex justify-content-between">
        <div class="form-group text-center col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Name..." />
        </div>
        <div  class="form-group text-center col-md-6">
            <label asp-for="Place"></label>
            <input asp-for="Place" class="form-control" placeholder="Place..." />
        </div>
    </div>
    <hr class="hr-2 eventures-bg-color" />
    <div class="form-row d-flex justify-content-between my-3">
        <div  class="form-group text-center col-md-6">
            <label asp-for="Start"></label>
            <input asp-for="Start" class="form-control" placeholder="Start..." />
        </div>
        <div  class="form-group text-center col-md-6">
            <label asp-for="End"></label>
            <input asp-for="End" class="form-control" placeholder="End..." />
        </div>
    </div>
    <hr class="hr-2 eventures-bg-color" />
    <div class="form-row d-flex justify-content-between my-3">
        <div  class="form-group text-center col-md-6">
            <label asp-for="TotalTickets"></label>
            <input asp-for="TotalTickets" class="form-control" placeholder="Total tickets..." />
        </div>
        <div  class="form-group text-center col-md-6">
            <label asp-for="TicketPrice"></label>
            <input asp-for="TicketPrice" class="form-control" placeholder="Price per ticket..." />
        </div>
    </div>
    <hr class="hr-2 eventures-bg-color" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color">Create Event</button>
    </div>
</form>