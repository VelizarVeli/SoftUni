<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>Eventures</title>
    <link rel="stylesheet" type="text/css" href="/css/reset-css.css">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg eventures-bg-color font-weight-bold">
            <div class="container eventures-bg-color">
                <a class="navbar-brand nav-link-white" href="/">Eventures</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav right-side">
                        <li class="nav-item">
                            <a class="nav-link nav-link-white" href="/">Home</a>
                        </li>
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown">
                                <button class="btn font-weight-bold eventures-bg-color dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Events
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-area="Events" asp-controller="Events" asp-action="All">All Events</a>
                                    @if (this.User.IsInRole("Administrator"))
                                    {
                                        <a class="dropdown-item" asp-area="Events" asp-controller="Events" asp-action="Create">Create Events</a>
                                    }
                                    <a class="dropdown-item" asp-area="Events" asp-controller="Events" asp-action="MyEvents">My Events</a>
                                </div>
                            </li>
                        }

                        @if (this.User.IsInRole("Administrator"))
                        {
                            <li class="dropdown">
                                <button class="btn font-weight-bold eventures-bg-color dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Orders
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-area="Events" asp-controller="Events" asp-action="All">All Orders</a>
                                </div>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <main class="mt-3 mb-5">
            @RenderBody()
        </main>
        <footer>
            <div class="container-fluid eventures-bg-color">
                <div class="font-weight-bold p-2 text-center">
                    &copy; All right reserved 2018.
                </div>
            </div>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>