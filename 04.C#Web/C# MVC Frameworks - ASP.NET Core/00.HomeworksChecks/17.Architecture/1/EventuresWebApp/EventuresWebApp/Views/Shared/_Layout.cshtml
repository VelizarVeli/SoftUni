<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>Eventures</title>
    <link rel="stylesheet" type="text/css" href="/css/reset-css.css">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <header>
            <nav class="navbar navbar-expand-lg eventures-bg-color">
                <a class="navbar-brand ml-5" href="/"><strong>Eventures</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/"><strong>Home</strong></a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="javascript:void(0)" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <strong>Events</strong>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="nav-link" asp-controller="Events" asp-action="All">All Events</a>
                                    <a class="nav-link" asp-controller="Events" asp-action="My">My Events</a>
                                    @if (User.IsInRole("Administrator"))
                                    {
                                        <a class="nav-link" asp-controller="Events" asp-action="Create">Create Event</a>
                                    }
                                </div>
                            </li>
                        }

                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="javascript:void(0)" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <strong>Orders</strong>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="nav-link" asp-controller="Orders" asp-action="All">All Orders</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Accounts" asp-action="Administration"><strong>Administration</strong></a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav mr-5">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item mr-3 mt-2">
                                <p><strong>Hello, @User.Identity.Name!</strong></p>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Accounts" asp-action="Logout"><strong>Logout</strong></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item mr-3">
                                <a class="nav-link" asp-controller="Accounts" asp-action="Register"><strong>Register</strong></a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Accounts" asp-action="Login"><strong>Login</strong></a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </header>
        <main class="mt-3">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    @RenderBody()
                </div>
            </div>
        </main>
        <footer>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="p-2 text-center eventures-bg-color">
                        &copy; CopyRight Eventures Inc. 2018-2018. All rights reserved.
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>
@RenderSection("Scripts", false)
</html>
