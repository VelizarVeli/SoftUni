@model EventuresWebApp.Web.ViewModels.Accounts.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h1 class="text-center">Login</h1>
            <hr class="eventures-bg-color half-width hr-3" />
            <form class="mx-auto half-width" method="post">
                <div class="form-group">
                    <label class="label" asp-for="Username"></label>
                    <input class="form-control" asp-for="Username" placeholder="Username...">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="label" asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" placeholder="Password...">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <hr class="eventures-bg-color hr-3" />
                <div class="form-group checkbox-inline">
                    <input class="form-control text-center checkbox-inline" asp-for="RememberMe">
                    <label class="label" asp-for="RememberMe"></label>
                </div>
                <hr class="eventures-bg-color hr-3" />
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn eventures-bg-color">Login</button>
                </div>
            </form>
            <div class="nav-link-dark text-center mt-3">
                <a class="text-center nav-link-dark" href="/">Forgot your password?</a>
            </div>
            <div class="nav-link-dark text-center mt-2">
                <a class="text-center nav-link-dark" asp-controller="Accounts" asp-action="Register">Register as a new user</a>
            </div>
            <hr class="eventures-bg-color hr-3 half-width" />
               <div class="text-center">
                   <a class="btn eventures-bg-color" href="/identity/account/login">Log in with external account</a>
               </div>
            <hr class="eventures-bg-color hr-3 half-width" />
        </div>
    </div>
</div>

@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}

