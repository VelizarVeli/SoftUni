@model Chushka.Web.Models.ProductViewModel

@{
    ViewData["Title"] = "View";
}

<h1 class="text-center">Edit Product</h1>
<hr class="hr-2 bg-dark"/>
<form asp-action="Edit" asp-controller="Product" class="mx-auto half-width">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control"/>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label"></label>
    <input asp-for="Price" class="form-control"/>
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="product-type-holder mt-4 d-flex justify-content-around">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for="Type" value="Food">
        <label class="form-check-label" asp-for="Type">Food</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for="Type" value="Domestic">
        <label class="form-check-label" asp-for="Type">Domestic</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for="Type" value="Health">
        <label class="form-check-label" asp-for="Type">Health</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for="Type" value="Cosmetic">
        <label class="form-check-label" asp-for="Type">Cosmetic</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for="Type" value="Other">
        <label class="form-check-label" asp-for="Type">Other</label>
        </div>
    </div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-default" />
    <a asp-action="Index" asp-controller="Home" class="btn btn-default">Cancel</a>
</div>
</form>
