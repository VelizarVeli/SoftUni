@using MyChushka.WebApp.Constants
@model List<MyChushka.WebApp.ViewModels.Home.IndexNodeViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<main class="mt-3 mb-5">
    <div class="container-fluid text-center">
        @if (this.User.IsInRole(MyConst.AdminRole))
        {
            <h2>Greetings, Admin-@this.User.Identity.Name!</h2>
            <h4>Enjoy your work today!</h4>
        }
        else
        {
            <h2>Greetings, @this.User.Identity.Name!</h2>
            <h4>Feel free to view and order any of our products.</h4>
        }
    </div>
    <hr class="hr-2 bg-dark" />
    <div class="container-fluid product-holder">
        <div class="row d-flex justify-content-around">
            @for (int i = 0; i < this.Model.Count; i++)
            {
                var item = this.Model[i];

                if (i > 0 && i % 5 == 0)
                {
                    @:</div>
                    @:<div class="row d-flex justify-content-around mt-4">
                }

                <vc:product-node id="@item.Id"></vc:product-node>
            }
        </div>
    </div>
</main>