@model MyChushka.WebApp.Models.Product

@{
    this.ViewData["Title"] = "Ordered Item";
}

<main class="mt-3 mb-5">
    <h1 class="text-center">You have ordered a new item:</h1>
    <hr class="hr-2 bg-dark" />
    <h3 class="text-center">@this.Model.Name</h3>
    <hr class="hr-2 bg-dark" />
    <div class="product-type-holder half-width mx-auto d-flex justify-content-between">
        <h5 class="text-center">Type: @this.Model.Type</h5>
        <h5 class="text-center">Price: $@this.Model.Price</h5>
    </div>
    <hr class="hr-2 bg-dark" />
    <h3 class="text-center">Description</h3>
    <div class="product-description-holder">
        <p class="text-center mt-4">
            @this.Model.Description
        </p>
    </div>
    <hr class="hr-2 bg-dark" />
    <h3 class="text-center">Actions</h3>
    <div class="product-action-holder mt-4 d-flex justify-content-around">
        <a asp-controller="Home" asp-action="Index" type="submit" class="btn chushka-bg-color">Back</a>
    </div>
</main>