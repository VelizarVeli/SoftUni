@model MyChushka.WebApp.ViewModels.Home.IndexNodeViewModel

<a asp-controller="Products" asp-action="Details" asp-route-id="@this.Model.Id" class="col-md-2">
    <div class="product p-1 chushka-bg-color rounded-top rounded-bottom">
        <h5 class="text-center mt-3">@this.Model.Name</h5>
        <hr class="hr-1 bg-white" />
        <p class="text-white text-center">
            @this.Model.ShortDescription
        </p>
        <hr class="hr-1 bg-white" />
        <h6 class="text-center text-white mb-3">$@this.Model.Price</h6>
    </div>
</a>