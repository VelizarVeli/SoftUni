@model MyChushka.WebApp.ViewModels.Products.UpdateProductViewModel
@{
    this.ViewData["Title"] = "Edit";
}

<main class="mt-3 mb-5">
    <h1 class="text-center">Edit Product</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" value="@this.Model.Name">
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" value="@this.Model.Price">
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4">@this.Model.Description</textarea>
        </div>
        <h4 class="text-center">Product Type</h4>
        <hr class="hr-2 bg-dark half-width mt-4" />

        @{
            var types = new[] { "Food", "Domestic", "Health", "Cosmetic", "Other" };
        }

        <div class="product-type-holder mt-4 d-flex justify-content-around">
            @for (int i = 1; i <= types.Length; i++)
            {
                if (this.Model.Type == i)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="inlineRadio@i" value="@i" checked />
                        <label class="form-check-label" for="inlineRadio1">@types[i - 1]</label>
                    </div>
                }
                else
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="inlineRadio@i" value="@i" />
                        <label class="form-check-label" for="inlineRadio1">@types[i - 1]</label>
                    </div>
                }
            }
        </div>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
            <button type="submit" class="btn chushka-bg-color">Edit</button>
            <a href="javascript:window.history.back()" type="submit" class="btn chushka-bg-color">Cancel</a>
        </div>
    </form>
</main>