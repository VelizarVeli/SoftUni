@model Eventures.Web.ViewModels.CreateEventViewModel

<h1 class="text-center">Register</h1>
<hr class="w-50 hr-2" />
<form class="mx-auto w-50" method="post" asp-controller="Events" asp-action="Create">
    <div asp-validation-summary="All"></div>
    <div class="row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="Name" class="font-weight-bold"></label>
            <input asp-for="Name" class="form-control" placeholder="Name...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="Place" class="font-weight-bold"></label>
            <input asp-for="Place" class="form-control" placeholder="Place...">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="Start" class="font-weight-bold"></label>
            <input asp-for="Start" class="form-control" placeholder="Start...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="End" class="font-weight-bold"></label>
            <input asp-for="End" class="form-control" placeholder="End...">
        </div>
    </div>
    <hr class="hr-2"/>
    <div class="row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="TotalTickets" class="font-weight-bold"></label>
            <input asp-for="TotalTickets" class="form-control" placeholder="TotalTickets...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="PricePerTicket" class="font-weight-bold"></label>
            <input asp-for="PricePerTicket" class="form-control" placeholder="PricePerTicket...">
        </div>
    </div>
    <hr class="hr-2"/>
    <div class="button-holder mt-4 d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color text-dark">Create Event</button>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
