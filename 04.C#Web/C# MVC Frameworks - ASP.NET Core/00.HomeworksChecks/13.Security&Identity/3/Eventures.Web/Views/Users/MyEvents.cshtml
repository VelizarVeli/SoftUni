@model IEnumerable<EventViewModel>

<h1 class="text-center">My Events</h1>
<hr class="hr-2" />
<table class="table mx-auto table-hover">
    <thead>
    <tr class="row mx-auto">
        <th class="col-md-1 font-weight-bold">#</th>
        <th class="col-md-5 font-weight-bold">Name</th>
        <th class="col-md-2 font-weight-bold">Start</th>
        <th class="col-md-2 font-weight-bold">End</th>
        <th class="col-md-2 font-weight-bold">Tickets</th>
    </tr>
    </thead>
    <tbody>
    @{
        var counter = 0;
    }

    @foreach (var ev in Model)
    {
        counter++;
        <tr class="row mx-auto">
            <th class="col-md-1">@counter</th>
            <td class="col-md-5">@ev.Name</td>
            <td class="col-md-2">@ev.Start</td>
            <td class="col-md-2">@ev.End</td>
            <td class="col-md-2">@ev.TicketsOrdered</td>
        </tr>
    }
    </tbody>
</table>
<hr class="hr-2" />

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}