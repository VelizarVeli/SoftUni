@model Eventures.Web.ViewModels.RegisterViewModel

<h1 class="text-center">Register</h1>
<hr class="w-50 hr-2" />
<form class="mx-auto w-50" method="post" asp-controller="Users" asp-action="Register">
    <div asp-validation-summary="All"></div>
    <div class="row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="Username" class="font-weight-bold"></label>
            <input asp-for="Username" class="form-control" placeholder="Username...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="Email" class="font-weight-bold"></label>
            <input asp-for="Email" class="form-control" placeholder="Email...">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="Password" class="font-weight-bold"></label>
            <input asp-for="Password" class="form-control" placeholder="Password...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password...">
        </div>
    </div>
    <hr class="hr-2" />
    <div class="row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="FirstName" class="font-weight-bold"></label>
            <input asp-for="FirstName" class="form-control" placeholder="First Name...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="LastName" class="font-weight-bold"></label>
            <input asp-for="LastName" class="form-control" placeholder="Last Name...">
        </div>
    </div>
    <div class="form-group pb-4 text-center">
        <label asp-for="Ucn" class="font-weight-bold"></label>
        <input asp-for="Ucn" class="form-control" placeholder="Universal Citizen Number...">
    </div>
    <hr class="hr-2" />
    <div class="button-holder mt-4 d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color text-dark">Register</button>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}