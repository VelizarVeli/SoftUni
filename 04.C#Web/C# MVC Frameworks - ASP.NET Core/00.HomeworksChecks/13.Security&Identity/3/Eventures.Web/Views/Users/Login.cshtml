@model Eventures.Web.ViewModels.LoginViewModel

<h1 class="text-center">Login</h1>
<hr class="w-25 hr-2" />
<form class="mx-auto w-25" method="post" asp-controller="Users" asp-action="Login">
    <div asp-validation-summary="All"></div>
    <div class="form-group text-center">
        <label asp-for="Username" class="font-weight-bold"></label>
        <input asp-for="Username" class="form-control" placeholder="Username...">
    </div>
    <div class="form-group text-center">
        <label asp-for="Password" class="font-weight-bold"></label>
        <input asp-for="Password" class="form-control" placeholder="Password...">
    </div>
    <hr class="hr-2"/>
    <div class="form-group text-center">
        <input asp-for="RememberMe">
        <label asp-for="RememberMe"></label>
    </div>
    <hr class="hr-2"/>
    <div class="button-holder mt-4 d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color text-dark">Login</button>
    </div>
</form>
<h6 class="text-center pt-4">
    <a id="bluelink" href="/">Forgot your password?</a>
</h6>
<h6 class="text-center">
    <a id="bluelink" href="/users/register">Register as a new user</a>
</h6>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
