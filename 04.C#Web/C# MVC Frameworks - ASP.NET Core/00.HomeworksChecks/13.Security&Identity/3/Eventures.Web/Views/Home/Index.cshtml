@if (User.Identity.IsAuthenticated)
{
    <div class="jumbotron mt-3 eventures-bg-color text-dark text-center">
        <h1 class="text-dark">Welcome, @User.Identity.Name!</h1>
        <hr class="hr-1" />
        <h3>Eventures wishes you an exciting experience.</h3>
        
    </div>
}
else
{
    <div class="jumbotron mt-3 eventures-bg-color text-dark">
        <h1 class="text-dark">Eventures - The best ticket service in the world.</h1>
        <hr class="bg-secondary hr-2" />
        <h3><a class="nav-link-dark" href="/users/login">Login</a> to start "eventing".</h3>
        <h3><a class="nav-link-dark" href="/users/register">Register</a> if you don't have an account.</h3>
    </div> 
}
