@model EVENTURES.App.ViewModels.CreateEventViewModel
@{
    ViewData["Title"] = "Create";
}

<main class="mt-3">
    <h1 class="text-center">Create Event</h1>
    <hr class="wiy chushka-bg-color height: 7px" />
    <form class="mx-auto half-width wiy" method="post" asp-controller="Events" asp-action="Create">
        <div class="row">
            <div class="form-group inline col-sm-6  text-center">
                <label asp-for="Name"><b>Name</b></label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Name...">
            </div>
            <div class="form-group inline col-sm-6  text-center">
                <label asp-for="Place"><b>Place</b></label>
                <input asp-for="Place" type="text" class="form-control" placeholder="Place...">

            </div>
        </div>
        <div class="row">
            <div class="form-group inline col-sm-6  text-center">
                <label asp-for="Start"><b>Start</b></label>
                <input asp-for="Start" type="date" class="form-control" placeholder="Start...">
            </div>
            <div class="form-group inline col-sm-6  text-center">
                <label asp-for="End"><b>End</b></label>
                <input asp-for="End" type="date" class="form-control" placeholder="End...">
            </div>
        </div>
        <hr class="chushka-bg-color height: 7px" />
        <div class="row">
            <div class="form-group inline col-sm-6  text-center">
                <label asp-for="TotalTickets"><b>Total Tickets</b></label>
                <input asp-for="TotalTickets" type="text" class="form-control" placeholder="Total Tickets...">
            </div>
            <div class="form-group  inline text-center">
                <label asp-for="PricePerTicket"><b>Price Per Ticket</b></label>
                <input asp-for="PricePerTicket" type="number" class="form-control" placeholder="PricePerTicket...">
            </div>
        </div>
        
        <hr class="chushka-bg-color height: 7px" />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color">Create Event</button>
        </div>
    </form>
</main>


