@model IEnumerable<EventOutputModel>
@{
    ViewData["Title"] = "All Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="mt-3 mb-5">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <hr class="hr-2 chushka-bg-color  w-75" />
    <table class="table w-75 mx-auto table-hover">

        <thead>
        <tr class="row">
            <th class="col-md-2">#</th>
            <th class="col-md-4">Name</th>
            <th class="col-md-2">Start</th>
            <th class="col-md-2">End</th>
            <th class="col-md-2 col-">Tickets</th>
        </tr>
        </thead>
        <tbody>
        @{
            var num = 1;
        }
        @foreach (var eventure in Model)
        {
            <tr class="row">
                <th class="col-md-2">@num</th>
                <td class="col-md-4">@eventure.Name</td>
                <td class="col-md-2">@eventure.Start</td>
                <td class="col-md-2">@eventure.End</td>
                <td class="col-md-2">@eventure.Tickets</td>
            </tr>
            num++;
        }
        </tbody>
    </table>
    <hr class="hr-2 chushka-bg-color  w-75" />
</main>