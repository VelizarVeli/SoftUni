@using Eventures.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<EventureUser> SignInManager
@inject UserManager<EventureUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Administrator"))
    {
        <nav class="navbar navbar-expand-lg bg-eventure">
            <div class="offset-1">
                <strong><a asp-action="Index" asp-controller="Home" class="navbar-brand nav-link-white ">Eventures</a></strong>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                <ul class="navbar-nav left-side">
                    <li class="nav-item">
                        <strong><a class="nav-link nav-link-white" asp-action="Index" asp-controller="Home">Home</a></strong>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <button class="btn bg-eventure dropdown-toggle" type="button" data-toggle="dropdown">
                                <strong>Events</strong>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Events" asp-action="All" class="text-dark">All Events</a></li>
                                <li><a asp-controller="Events" asp-action="MyEvents" class="text-dark">My Events</a></li>
                                <li><a asp-controller="Events" asp-action="Create" class="text-dark">Create Event</a></li>
                            </ul>
                        </div>
                    </li>

                    <li class="nav-item">
                        <div class="dropdown">
                            <button class="btn bg-eventure dropdown-toggle" type="button" data-toggle="dropdown">
                                <strong>Orders</strong>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Orders" asp-action="All" class="text-dark">All Orders</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <strong><a class="nav-link nav-link-white" asp-action="Manage" asp-controller="Account">Manage</a></strong>
                    </li>
                </ul>
                <div class="mx-5" style="width: 248px;">
                    <ul class="navbar-nav right-side">
                        <li class="nav-item">
                            <a class="nav-link nav-link-white"><strong>Hello @User.Identity.Name!</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-white" asp-action="Logout" asp-controller="Account">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    else
    {
        <nav class="navbar navbar-expand-lg bg-eventure">
            <a asp-action="Index" asp-controller="Home" class="navbar-brand nav-link-white">Eventures</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                <ul class="navbar-nav left-side">
                    <li class="nav-item">
                        <a class="nav-link nav-link-white" asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <button class="btn bg-eventure dropdown-toggle" type="button" data-toggle="dropdown">
                                <strong>Events</strong>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Events" asp-action="All">All Events</a></li>
                                <li><a asp-controller="Events" asp-action="MyEvents" class="text-dark">My Events</a></li>

                            </ul>
                        </div>
                    </li>
                </ul>
                <div class="mx-5" style="width: 248px;">
                    <ul class="navbar-nav right-side">
                        <li class="nav-item">
                            <a class="nav-link nav-link-white"><strong>Hello @User.Identity.Name!</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-white" asp-action="Logout" asp-controller="Account">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
}
else
{
    <nav class="navbar navbar-expand-lg bg-eventure">
        <div class="offset-1">
            <strong><a asp-action="Index" asp-controller="Home" class="navbar-brand nav-link-white ">Eventures</a></strong>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <strong><a class="nav-link nav-link-white" asp-action="Index" asp-controller="Home">Home</a></strong>
                </li>
            </ul>
            <div class="mx-5" style="width: 225px;">
                <ul class="navbar-nav right-side">
                    <li class="nav-item">
                        <strong><a class="nav-link nav-link-white" asp-area="Identity" asp-page="/Account/Register">Register</a></strong>
                    </li>
                    <li class="nav-item">
                        <strong> <a class="nav-link nav-link-white" asp-area="Identity" asp-page="/Account/Login">Login</a></strong>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}