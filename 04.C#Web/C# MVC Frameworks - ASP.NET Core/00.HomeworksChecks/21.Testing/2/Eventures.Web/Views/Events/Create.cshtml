
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CreateEventViewModel
<main class="mt-3 offset-3 col-md-5">
    <h1 class="text-center">Create Event</h1>
    <hr class="bg-eventure hr-2" />
    <form class="mx-auto half-width" method="post" asp-controller="Events" asp-action="Create">
        <div class="row">
            <div class="form-group col-md-6 text-center">
                <strong><label asp-for="Name"></label></strong>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 text-center">
                <strong><label asp-for="Place"></label></strong>
                <input asp-for="Place" class="form-control" placeholder="Place...">
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6 text-center">
                <strong><label asp-for="Start"></label></strong>
                <input asp-for="Start" class="form-control" placeholder="Start...">
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 text-center">
                <strong><label asp-for="End"></label></strong>
                <input asp-for="End" class="form-control" placeholder="End...">
                <span asp-validation-for="End" class="text-danger"></span>
            </div>
        </div>
        <hr class="bg-eventure hr-2" />
        <div class="row">
            <div class="form-group col-md-6 text-center">
                <strong><label asp-for="TotalTickets"></label></strong>
                <input asp-for="TotalTickets" class="form-control" placeholder="Total Tickets...">
                <span asp-validation-for="TotalTickets" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 text-center">
                <strong> <label asp-for="PricePerTicket"></label></strong>
                <input asp-for="PricePerTicket" class="form-control" placeholder="Price Per Ticket...">
                <span asp-validation-for="PricePerTicket" class="text-danger"></span>
            </div>
        </div>
        <hr class="bg-eventure hr-2" />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn bg-eventure">Create Event</button>
        </div>
    </form>
</main>
