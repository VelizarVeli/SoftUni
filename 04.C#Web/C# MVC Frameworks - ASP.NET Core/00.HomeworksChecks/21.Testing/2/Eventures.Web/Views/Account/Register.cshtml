
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RegisterViewModel
@if (ViewData.ContainsKey("Error"))
{
    <div class="bg-danger text-center container rounded mt-3 py-3">
        <h5 class="text-white">@ViewData["Error"]</h5>
    </div>
}
<main class="mt-3 offset-3 col-md-5">
    <h1 class="text-center">Register</h1>
    <hr class="bg-eventure hr-2" />
    <form class="mx-auto half-width" method="post" asp-controller="Account" asp-action="Register">
        <div class="row">
            <div class="form-group col-md-6 text-center">
                <strong><label asp-for="Username"></label></strong>
                <input asp-for="Username" class="form-control" placeholder="Username...">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 text-center">
                <strong><label asp-for="Email"></label></strong>
                <input asp-for="Email" class="form-control" placeholder="Email...">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6 text-center">
                <strong><label asp-for="Password"></label></strong>
                <input asp-for="Password" class="form-control" placeholder="Password...">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 text-center">
                <strong><label asp-for="ConfirmPassword"></label></strong>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password...">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <hr class="bg-eventure hr-2" />
        <div class="row">
            <div class="form-group col-md-6 text-center">
                <strong><label asp-for="FirstName"></label></strong>
                <input asp-for="FirstName" class="form-control" placeholder="First Name...">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 text-center">
                <strong> <label asp-for="LastName"></label></strong>
                <input asp-for="LastName" class="form-control" placeholder="Last Name...">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group text-center">
            <strong><label asp-for="Ucn"></label></strong>
            <input asp-for="Ucn" class="form-control" placeholder="Universal Citizen Number...">
            <span asp-validation-for="Ucn" class="text-danger"></span>
        </div>
        <hr class="bg-eventure hr-2" />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn bg-eventure">Register</button>
        </div>
    </form>
</main>
