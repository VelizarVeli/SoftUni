@model FDMCBook.Models.Cat
<div class="bg-primary p-2 text-white text-center">
    <h1>Add Cat</h1>
</div>
<form asp-action="AddCat" method="post" class="m-4">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Age</label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label>Breed</label>
        <input asp-for="Breed" class="form-control" />
    </div>
    <div class="form-group">
        <label>ImageUrl</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Add Cat</button>
    </div>
</form>