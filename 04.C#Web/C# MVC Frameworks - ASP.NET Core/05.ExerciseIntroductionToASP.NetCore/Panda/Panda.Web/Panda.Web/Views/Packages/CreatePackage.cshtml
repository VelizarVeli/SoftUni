@model Panda.Common.ViewModels.Packages.CreatePackageViewModel

@{
    ViewData["Title"] = "CreatePackage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center text-panda">Create Package</h1>
<hr class="bg-panda w-50 hr-2" />
<form asp-action="CreatePackage" method="post" class="mx-auto w-50">
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="Description" class="text-panda">Description</label>
        <input asp-for="Description" placeholder="Description..." class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label asp-for="Weight" class="text-panda">Weight</label>
            <input asp-for="Weight" class="form-control" placeholder="Weight...">
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="Address" class="text-panda">Shipping Address</label>
            <input asp-for="Address" class="form-control" placeholder="Shipping Address..." />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <hr class="bg-panda hr-2" />
    <div class="form-group mx-auto w-50  text-center">
        <label asp-for="Recipient" class="text-panda"></label>
        <select asp-for="Recipient" class="form-control">
            <option value="">-- Choose Recipient --</option>
            @foreach (var recipient in Model.Recipients)
            {
                <option>@recipient</option>
            }
        </select>
        <span asp-validation-for="Recipient" class="text-danger"></span>
    </div>
    <hr class="bg-panda hr-2" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn bg-panda text-white">Create</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}